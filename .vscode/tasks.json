{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build for debug active file",
            "command": "clang++",
            "args": [
                "${file}",
                "-fcolor-diagnostics",
                "-g",
                "-o${fileDirname}/${fileBasenameNoExtension}.exe",
                "-pedantic",
                "-std=c++17",
                "-Wall"
            ],
            "group": "test",
            "detail": "Task generated for debug",
            "linux": {
                "command": "clang++-13",
                "args": [
                    "${file}",
                    "-fcolor-diagnostics",
                    "-g",
                    "-o${fileDirname}/${fileBasenameNoExtension}.exe",
                    "-lpthread",
                    "-pedantic",
                    "-std=c++17",
                    "-stdlib=libc++",
                    "-Wall",
                ],
            },
        },
        {
            "type": "shell",
            "label": "Build active file",
            "command": "clang++",
            "args": [
                "${file}",
                "-DNDEBUG",
                "-fcolor-diagnostics",
                "-O",
                "-o${fileDirname}/${fileBasenameNoExtension}.exe",
                "-pedantic",
                "-std=c++17",
                "-Wall",
            ],
            "group": "build",
            "detail": "Task generated for release",
            "linux": {
                "command": "clang++-13",
                "args": [
                    "${file}",
                    "-DNDEBUG",
                    "-fcolor-diagnostics",
                    "-lpthread",
                    "-O",
                    "-o{fileDirname}/${fileBasenameNoExtension}.exe",
                    "-pedantic",
                    "-std=c++17",
                    "-stdlib=libc++",
                    "-Wall"
                ],
            }
        },
        {
            "type": "shell",
            "label": "Run active file",
            "dependsOn": "Build active file",
            "command": "cd ${fileDirname}; ./${fileBasenameNoExtension}.exe",
            "presentation": {
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Run after bulid the active file",
        }
    ]
}
