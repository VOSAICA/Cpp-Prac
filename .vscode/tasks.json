{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build for debug active file",
            "command": "clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-Wall",
                "-fcolor-diagnostics",
                "-std=c++17",
                "-D",
                "DEBUG"
            ],
            "group": "test",
            "detail": "Task generated for debug"
        },
        {
            "type": "shell",
            "label": "Build active file",
            "command": "clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-Wall",
                "-fcolor-diagnostics",
                "-std=c++17",
                "-D",
                "NDEBUG"
            ],
            "group": "build",
            "detail": "Task generated for release"
        },
        {
            "type": "shell",
            "label": "Run active file",
            "dependsOn": "Build active file",
            "command": "cd ${fileDirname}; ./${fileBasenameNoExtension}.exe",
            "presentation": {
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Run after bulid the active file"
        }
    ]
}
